# ==============================================
# TradeBot Environment Configuration
# ==============================================
# Скопируйте этот файл как .env и заполните значения

# ==============================================
# TELEGRAM BOT CONFIGURATION
# ==============================================
BOT_TOKEN=your_bot_token_here
# Получите токен у @BotFather в Telegram

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGODB_URI=mongodb://localhost:27017/tradebot
# Строка подключения к MongoDB

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
NODE_ENV=development

# ==============================================
# API CONFIGURATION
# ==============================================
ACCEPT_TOKEN=your_accept_token_here
# Токен для авторизации API запросов

# ==============================================
# EXTERNAL SERVICES (AGGR)
# ==============================================
PROXY_URL=https://cors.aggr.trade/
API_URL=https://api.aggr.trade/
LIB_URL=https://lib.aggr.trade/
BASE_PATH=/aggr/

# Поддерживаемые таймфреймы в секундах
API_SUPPORTED_TIMEFRAMES=5,10,15,30,60,180,300,900,1260,1800,3600,7200,14400,21600,28800,43200,86400

# ==============================================
# PUSH NOTIFICATIONS
# ==============================================
PUBLIC_VAPID_KEY=your_vapid_key_here
# VAPID ключ для push-уведомлений

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
ADMIN_IDS=
# Comma-separated list of Telegram user IDs who have admin access
# Example: ADMIN_IDS=123456789,987654321

# ==============================================
# RATE LIMITING
# ==============================================
MAX_REQUESTS_PER_MINUTE=60
MAX_SUBSCRIPTIONS_PER_USER=10

# ==============================================
# NOTIFICATION SETTINGS
# ==============================================
NOTIFICATION_COOLDOWN_MINUTES=5
MAX_NOTIFICATIONS_PER_HOUR=20

# ==============================================
# DATA RETENTION
# ==============================================
DATA_RETENTION_DAYS=30
CLEANUP_INTERVAL_HOURS=24

# ==============================================
# WEBSOCKET CONFIGURATION
# ==============================================
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
LOG_FILE=logs/tradebot.log